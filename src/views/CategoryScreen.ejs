<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thể loại</title>
    <link rel="stylesheet" href="/css/horizontal_bar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="sidebar">
        <form method="get">
            <a href="/">Trang chủ</a>
        </form>
        <form method="get">
            <a href="/category" class="active">Thể loại</a>
        </form>
        <form method="get">
            <a href="/product">Sản phẩm</a>
        </form>
        <form method="get">
            <a href="#about">Đơn hàng</a>
        </form>
        <form method="get">
            <a href="#about">Doanh số</a>
        </form>
        <form method="get">
            <a href="#about">Người dùng</a>
        </form>
        <form action="/handle-log-out" method="post">
            <button type="submit" class="btn" style="color: red; font-weight: bold;">Đăng xuất</button>
        </form>
    </div>

    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/category">Thêm thể loại</a>
                        </li>
                        <li class="nav-item">
                            <form method="get">
                                <a class="nav-link" aria-current="page" href="/categories-parent">Danh mục</a>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form action="" method="get">
                                <a class="nav-link" aria-current="page" href="/categories-child">Thể loại</a>
                            </form>
                        </li>
                    </ul>
                    <!-- <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Tìm kiếm món ăn..."
                            aria-label="Search">
                        <button class="btn btn-outline-warning" style="border-color: #EEA734; color: black;"
                            type="submit">Tìm</button>
                    </form> -->
                </div>
            </div>
        </nav>
        <br><br><br>
        <!-- Category parent -->
        <div class="container">
            <h1>Thêm danh mục</h1>
            <form action="/handle-add-category-parent" method="post">
                <div class="form-group">
                    <label for="name">Tên danh mục</label>
                    <input type="text" class="form-control" id="name" placeholder="Tên danh mục"
                        name="categoryParentName" autocomplete="off" required>
                </div>
                <button type="submit" class="btn" style="background-color: #EEA734; color: white;">Thêm</button>
            </form>
        </div>
        <br><br><br>
        <!-- Category child -->
        <div class="container">
            <h1>Thêm thể loại</h1>
            <form action="/handle-add-category-child" method="post">
                <div class="form-group">
                    <label for="name">Danh mục</label>
                    <select name="idCategoryParent">
                        <% data.forEach(item=> { %>
                            <option value="<%= item.id %>">
                                <%= item.name %>
                            </option>
                            <% }); %>
                    </select>

                </div>
                <div class="form-group">
                    <label for="name">Tên thể loại</label>
                    <input type="text" class="form-control" id="name" placeholder="Tên thể loại"
                        name="categoryChildName" autocomplete="off" required>
                </div>
                <button type="submit" class="btn" style="background-color: #EEA734; color: white;">Thêm</button>
            </form>
        </div>

        <!-- Include Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </div>

</body>

</html>